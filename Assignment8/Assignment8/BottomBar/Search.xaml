<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment8.BottomBar.Search"
              NavigationPage.HasNavigationBar="False"
             >
    <ScrollView Orientation="Vertical">
        <VerticalStackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="450"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                   
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                   
                </Grid.ColumnDefinitions>

                   <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                          Source="caught.jpeg"
                          Aspect="AspectFill"
                         HorizontalOptions="Fill"
                         VerticalOptions="Fill" 
                        />
                    <Image Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                           Source="dots.png"
                           WidthRequest="20"
                           BackgroundColor="WhiteSmoke"/>
                    <Label Text="Explore Feature Boards"
                           Grid.Row="2" Grid.Column="0"
                           TextColor="Black"
                           FontSize="14"
                           FontAttributes="Bold"/>
                <Label Text="Ideas You Might Like"
                           Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                           TextColor="Black"
                           FontSize="25"
                           FontAttributes="Bold"/>
                
                <Label Text="Trending Now Asleep"
                     Grid.Row="0" Grid.Column="0"
                     TextColor="Black"
                     FontSize="25"
                     VerticalTextAlignment="End"
                     FontAttributes="Bold"
                        />


                <ScrollView Orientation="Horizontal" HeightRequest="50"
                          Grid.Row="4" Grid.ColumnSpan="2"   >
                    <StackLayout Orientation="Horizontal" Padding="10" >
                        <Image 
                             WidthRequest="300" HeightRequest="200"
                             Source="f1.jpg"
                             Aspect="AspectFill"
                            HorizontalOptions="Fill"

                            />
                            
                           
                        <BoxView Color="Blue" WidthRequest="100" HeightRequest="100"/>
                        <BoxView Color="Red" WidthRequest="250" HeightRequest="100" Margin="20,0,0,0"/>
                    </StackLayout>
                </ScrollView>

              
            </Grid>



        </VerticalStackLayout>
    </ScrollView>
            
    
    
    
</ContentPage>