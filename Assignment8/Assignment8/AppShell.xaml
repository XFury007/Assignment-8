<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Assignment8.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Assignment8.BottomBar"
 
    Title="Assignment8">

  
    
    <TabBar>

        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:Home}"
            Route="Home" />

        <ShellContent
            Title="Search"
            Icon="magnifyingglass.png"
            ContentTemplate="{DataTemplate local:Search}"
            Route="Search" />

        <ShellContent
            Title="Create"
            Icon="plus.png"
            ContentTemplate="{DataTemplate local:Create}"
            Route="Create" />

       
        <ShellContent
            Title="Inbox"
            Icon="messenger.png"
            ContentTemplate="{DataTemplate local:Inbox}"
            Route="Inbox" />

        <ShellContent
            Title="Profile"
            Icon="user.png"
            ContentTemplate="{DataTemplate local:Profile}"
            Route="Profile" />


    </TabBar>
</Shell>
